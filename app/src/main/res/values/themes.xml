<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Hope" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryContainer">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/textColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorSecondaryContainer">@color/accentColor</item>
        <item name="colorOnSecondary">@color/textColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/secondary_color</item>
        <!-- Window background color. -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Circular ImageView -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Derived Theme -->
    <style name="Theme.Hope" parent="Base.Theme.Hope" />
</resources>
