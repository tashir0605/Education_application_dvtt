<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/graddiant"

    android:showDividers="middle"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:background="@drawable/bg_special"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="About College"
            android:textSize="25sp"
            android:gravity="center"
            />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/acac"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@drawable/graddiant"
        android:padding="4dp">

        <TextView
            android:id="@+id/heading1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/roundcorner"
            android:paddingVertical="4dp"
            android:text="Academics and Co-Curricular Activities"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            >

        </TextView>

        <ImageView
            android:id="@+id/image1"
            android:layout_width="109dp"
            android:layout_height="161dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintLeft_toLeftOf="@id/heading1"
            app:layout_constraintTop_toBottomOf="@+id/heading1" />

        <TextView
            android:id="@+id/subheading1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/heading1"
            app:layout_constraintStart_toEndOf="@+id/image1"
            app:layout_constraintTop_toTopOf="@+id/image1" />

        <TextView
            android:id="@+id/body1Role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Role"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@id/subheading1"
            app:layout_constraintTop_toBottomOf="@id/subheading1" />

        <TextView
            android:id="@+id/body1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:scrollHorizontally="false"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@id/body1Role"

            app:layout_constraintTop_toTopOf="@id/body1Role" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/subpart1"
        android:padding="4dp"
        android:id="@+id/subpart2"
        android:background="@drawable/graddiant"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/white"
            android:text="Student Activity Council"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/roundcorner"
            android:id="@+id/heading2"
            android:textAlignment="center"
            android:paddingVertical="4dp"


            >

        </TextView>
        <ImageView
            android:layout_width="109dp"
            android:layout_height="161dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintLeft_toLeftOf="@id/heading2"
            app:layout_constraintTop_toBottomOf="@+id/heading2"

            android:id="@+id/image2"
            />

        <TextView
            android:id="@+id/subheading2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/image2"
            app:layout_constraintRight_toRightOf="@id/heading2"
            app:layout_constraintTop_toBottomOf="@id/heading2"
            app:layout_constraintTop_toTopOf="@id/image2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/body2Role"
            app:layout_constraintLeft_toLeftOf="@id/subheading2"
            app:layout_constraintTop_toBottomOf="@id/subheading2"
            android:text="Role"
            android:layout_marginTop="4dp"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/body2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:scrollHorizontally="false"

            android:textSize="10sp"
            android:layout_marginLeft="4dp"
            app:layout_constraintLeft_toRightOf="@id/body2Role"
            app:layout_constraintTop_toTopOf="@id/body2Role"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/subpart3"

        android:padding="4dp"
        android:background="@drawable/graddiant"
        >

        <TextView
            android:id="@+id/heading3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/roundcorner"
            android:paddingVertical="4dp"
            android:text="Student Senate"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:layout_width="109dp"
            android:layout_height="161dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintLeft_toLeftOf="@id/heading3"
            app:layout_constraintTop_toBottomOf="@+id/heading3"

            android:id="@+id/image3"
            />

        <TextView
            android:id="@+id/subheading3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"


            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/heading3"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/image3"
            app:layout_constraintTop_toTopOf="@+id/image3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/body3Role"
            app:layout_constraintLeft_toLeftOf="@id/subheading3"
            app:layout_constraintTop_toBottomOf="@id/subheading3"
            android:text="Role"
            android:layout_marginTop="4dp"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/body3"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:scrollHorizontally="false"
            android:textSize="10sp"
            android:layout_marginLeft="4dp"
            app:layout_constraintLeft_toRightOf="@id/body3Role"

            app:layout_constraintTop_toTopOf="@id/body3Role"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>