<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_special"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduction to Computer Science"
            android:padding="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/white"

            >

        </TextView>
    </LinearLayout>


    <TextView
        android:id="@+id/quiz"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/subject_background"
        android:elevation="30dp"
        android:textColor="#6681E5"
        android:padding="20dp"
        android:text="Quiz"

        android:textSize="23dp" />

    <TextView
        android:id="@+id/minor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:textSize="23dp"
        android:background="@drawable/subject_background"
        android:elevation="30dp"
        android:textColor="#6681E5"
        android:text="Minor 1 "/>
    <TextView
        android:id="@+id/minor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/subject_background"
        android:elevation="30dp"
        android:textColor="#6681E5"
        android:textSize="23dp"

        android:text="Minor 2"/>
    <TextView
        android:id="@+id/major"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:textSize="23dp"
        android:background="@drawable/subject_background"
        android:elevation="30dp"
        android:textColor="#6681E5"

        android:text="Major"/>

    <TextView
        android:id="@+id/professor_grading_system"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:textSize="23dp"
        android:background="@drawable/subject_background"
        android:elevation="30dp"
        android:textColor="#6681E5"
        android:text="Proffesor Grading Systum"/>
    <TextView
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/subject_background"
        android:elevation="30dp"
        android:textColor="#6681E5"
        android:textSize="23dp"
        android:text="Notes"/>



</LinearLayout>